<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RelativeLayout
            android:id="@+id/assig_manag_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/marks"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="end"
                android:text="Mark: 10"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="201604-Ghanaian Language(GA)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_today_black_24dp"
                android:text="End Date: 31-10-2016 11:30"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/download_question_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/enddate"
                 android:layout_marginTop="5dp"

                android:drawableLeft="@drawable/ic_file_download_black_24dp"
                android:text="Download QP"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view_submission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/download_question_paper"
                android:layout_alignBottom="@+id/download_question_paper"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                android:text="View Submission"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                android:textStyle="bold" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>