<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imagepack"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/email"/>

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slide_body"
        android:layout_centerHorizontal="true"
        android:text="IKOLILU PARENTS PORTAL"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:padding="20dp"
        android:text="Migration from version 2 to version 3 was at the top."
        android:textAlignment="center" />
</RelativeLayout>