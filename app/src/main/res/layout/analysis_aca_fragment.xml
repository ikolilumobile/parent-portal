<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorWhite">


        <RelativeLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/classicon"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_below="@+id/selectSchool"
            android:layout_marginTop="15dp"
            android:src="@drawable/classes" />
        <Spinner
            android:id="@+id/w_class"
            android:layout_toRightOf="@+id/classicon"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/termicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/w_class"
            android:layout_marginTop="15dp"
            android:src="@drawable/term" />

        <Spinner
            android:id="@+id/w_term"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/termicon"
            android:layout_marginTop="25dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/classicon"
            android:layout_alignLeft="@+id/classicon"
            android:layout_alignRight="@+id/classicon"
            android:layout_alignStart="@+id/classicon"
            android:layout_below="@id/classicon"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="Class" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignEnd="@+id/termicon"
            android:layout_alignLeft="@+id/termicon"
            android:layout_alignRight="@+id/termicon"
            android:layout_alignStart="@+id/termicon"
            android:text="Term"
            android:textAlignment="center"/>

    </RelativeLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:layout_below="@id/filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/barchat">

        </com.github.mikephil.charting.charts.BarChart>

</RelativeLayout>
