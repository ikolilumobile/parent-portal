<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ikolilu.ikolilu.portal.ui.wardService.wardOptionInfo.BillingPaymentsActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:background="@color/colorWhite"
            android:id="@+id/mainGrid"
            android:columnCount="3"
            android:rowCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="14dp"
            >

            <!-- Column 1 -->
            <android.support.v7.widget.CardView
                android:id="@+id/bills"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_rowWeight="1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:baselineAligned="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circlebackgroundyello"
                        android:padding="10dp"
                        android:src="@drawable/ic_cash_on_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Bill Total"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="GHC 0.00"
                        android:id="@+id/billTotal"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <!-- Column 2 -->
            <android.support.v7.widget.CardView
                android:id="@+id/payments"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:background="@color/colorAccent">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:baselineAligned="true"
                android:gravity="center"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circlebackgroundgreen"
                android:padding="10dp"
                android:src="@drawable/ic_credit_card_black_24dp" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Payments"
                android:textStyle="bold" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                    android:id="@+id/paymentss"
                android:text="GHC 0.00"
                android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Column 3 -->
            <android.support.v7.widget.CardView
                android:id="@+id/balance"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorAccent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:baselineAligned="true"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circlebackgroundpink"
                        android:padding="10dp"
                        android:src="@drawable/ic_account_balance_wallet_black_24dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Balance"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:id="@+id/balances"
                        android:text="GHC 0.00"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--<android.support.design.widget.TabLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/colorAccent"-->
        <!--app:tabMode="fixed"-->
        <!--app:tabGravity="fill"-->
        <!--app:tabTextColor="@color/colorWhite"-->
        <!--app:tabSelectedTextColor="@color/yello"-->
        <!--app:tabIndicatorColor="@color/yello"-->
        <!--android:id="@+id/billTabLayout_id">-->

    <!--</android.support.design.widget.TabLayout>-->

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/option_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="3dp"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        android:background="@color/colorAccent"
        app:menu="@menu/bill_options"></android.support.design.widget.BottomNavigationView>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/option_nav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></FrameLayout>


    <!--<android.support.v4.view.ViewPager-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/viewpager_id"></android.support.v4.view.ViewPager>-->
    </RelativeLayout>
</LinearLayout>
