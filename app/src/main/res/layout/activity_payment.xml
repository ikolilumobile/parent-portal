<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ikolilu.ikolilu.portal.ui.wardService.wardOptionInfo.PaymentActivity"
    android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bill_item"
            android:hint="Fee payment"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@android:color/holo_green_dark"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="0.00"
            android:id="@+id/bill_amount"
            android:layout_below="@+id/bill_item"
            android:textColor="@android:color/holo_red_dark"
            android:textColorLink="@color/colorAccent"
            android:textColorHint="@android:color/holo_green_dark"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bill_method"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bill_amount"
            />
        </RelativeLayout>
</RelativeLayout>
