                <!--android:layout_below="@+id/cs"-->
                <!--android:text="56.0"-->
                <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"-->
                <!--android:textSize="16sp" />-->

            <TextView
                android:id="@+id/es_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/total_con"
                android:layout_alignBottom="@+id/total_con"
                android:layout_alignLeft="@+id/score"
                android:layout_alignStart="@+id/score"
                android:text="64.3"
                android:layout_marginTop="25dp"
                android:layout_below="@id/score_cat"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/total"
                android:text="77.0"
                android:layout_marginTop="1dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="16sp" />




        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>